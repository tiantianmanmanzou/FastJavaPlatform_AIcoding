<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] [%logger{36}] : %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/application.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/application.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>100MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] [%logger{36}] : %msg%n</pattern>
        </encoder>
    </appender>

    <!-- MyBatis SQL日志配置 - 关闭所有SQL参数显示，避免base64数据污染日志 -->
    <logger name="com.template" level="DEBUG"/>
    <logger name="org.springframework.security" level="DEBUG"/>
    <!-- MyBatis完全关闭所有相关日志 -->
    <logger name="org.mybatis" level="ERROR"/>
    <logger name="org.apache.ibatis" level="ERROR"/>
    <logger name="org.mybatis.spring.SqlSessionUtils" level="ERROR"/>
    <logger name="com.template.mapper" level="ERROR"/>
    <logger name="com.template.content.mapper" level="ERROR"/>
    <logger name="com.template.user.mapper" level="ERROR"/>
    <logger name="com.template.role.mapper" level="ERROR"/>
    <logger name="com.template.permission.mapper" level="ERROR"/>
    <logger name="com.template.system.mapper" level="ERROR"/>
    <logger name="com.template.product.mapper" level="ERROR"/>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration>
